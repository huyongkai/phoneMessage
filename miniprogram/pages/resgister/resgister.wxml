 <view wx:if="{{!success}}">

     <view class='row'>
        <view class='info'>
            <input class= 'info-input' bindinput="usernameInput" placeholder="请输入你的昵称"/>
        </view>
     </view>

     <view class='row'>
        <view class='info'>
            <input type='password' class= 'info-input' bindinput="handleNewChanges" placeholder="请输入你的密码"/>
        </view>
     </view>

      <view class='row'>
         <view class='info'>
            <input  type='password' class= 'info-input' bindinput="handleNewChangesAgain" 
                    placeholder="请重新输入你的密码" />
         </view>
      </view>

      <button class='submit' bindtap='submit'>提交</button>
      <view class='reback' bindtap='reback'>
            <text>已有账户,返回登录界面</text>
      </view>
 </view>


