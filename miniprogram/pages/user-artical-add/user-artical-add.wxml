<view class='comment'>
    <view class='comment-uploader'>
        <view class='comment-uploader-add'>
                  <text class='comment-uploader-add-icon' bindtap='articalImage'>+</text>
              <text class='comment-uploader-add-des'>点击上传文章封面</text>
        </view>
    </view>
   
   <view class='title'>
       <input placeholder='请输入文章标题' bindinput='inputTitle'></input>
   </view>


        <textarea class='comment-text' placeholder='开始写个文章吧' minlength="{{min}}"     maxlength='{{max}}' bindinput='inputArtical'>
            <text class="currentWordNumber">{{currentWordNumber|0}}/{{max}}</text>
            <text class="hint">{{texts}}</text>
        </textarea>

    <button class='comment-save' bindtap='saveArtical'>保存</button>
</view>